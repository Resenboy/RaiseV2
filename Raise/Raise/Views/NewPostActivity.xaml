		<StackLayout>
			
		
			<Grid 
				  VerticalOptions="Center"
				  HorizontalOptions="Center"
				  ColumnSpacing="30"
				  RowSpacing="30"
				  Margin="15">
				<Grid.RowDefinitions>
					<RowDefinition Height="*"/>
					<RowDefinition Height="*"/>
				</Grid.RowDefinitions>

				<Grid.ColumnDefinitions>
					<ColumnDefinition Width="*"/>
					<ColumnDefinition Width="*"/>
				</Grid.ColumnDefinitions>

				<Frame Style="{x:StaticResource RoundedFrame}">
					<StackLayout>
					<Image>
						<Image.Source>
							<FontImageSource FontFamily="FontAwesomeBold"
											 Color="Black"
											 Glyph="&#xf302;" />
						</Image.Source>
					</Image>
						<Label Text="Carregar Foto"
							   HorizontalTextAlignment="Center"/>
					</StackLayout>
				<Frame.GestureRecognizers>
					<TapGestureRecognizer Command="{Binding PickPhotoCommand}"/>
				</Frame.GestureRecognizers>
				</Frame>

				<Frame Grid.Column="1"
					   Grid.Row="0"
					   Style="{x:StaticResource RoundedFrame}">
					<StackLayout >
					<Image>
						<Image.Source>
							<FontImageSource FontFamily="FontAwesomeBold"
											 Color="Black"
											 Glyph="&#xf030;" />
						</Image.Source>
					</Image>
						<Label Text="Tirar Foto"
						   HorizontalTextAlignment="Center" />
					</StackLayout>
				<Frame.GestureRecognizers>
					<TapGestureRecognizer Command="{Binding TakePhotoCommand}" />
				</Frame.GestureRecognizers>
			</Frame>

			<Frame Grid.Column="0"
				   Grid.Row="1"
				   Style="{x:StaticResource RoundedFrame}">
				<StackLayout>
					<Image>
						<Image.Source>
							<FontImageSource FontFamily="FontAwesomeBold"
											 Color="Black"
											 Glyph="&#xf1c8;" />
						</Image.Source>
					</Image>
					<Label Text="Carregar vídeo"
						   HorizontalTextAlignment="Center"/>
				</StackLayout>
				<Frame.GestureRecognizers>
					<TapGestureRecognizer Command="{Binding PickVideoCommand}" />
				</Frame.GestureRecognizers>
			</Frame>

			<Frame Grid.Column="1"
				   Grid.Row="1"
				   Style="{x:StaticResource RoundedFrame}">
				<StackLayout>
					<Image>
						<Image.Source>
							<FontImageSource FontFamily="FontAwesomeBold"
											 Color="Black"
											 Glyph="&#xf03d;" />
						</Image.Source>
					</Image>
					<Label Text="Gravar vídeo"
						   HorizontalTextAlignment="Center"/>
				</StackLayout>
				<Frame.GestureRecognizers>
					<TapGestureRecognizer Command="{Binding MakeVideoCommand}" />
				</Frame.GestureRecognizers>
			</Frame>

